{
  "name": "project-start-seed",
  "version": "0.0.0",
  "engines": {
    "node": ">=8.9.0"
  },
  "description": "react+typescript配置项目",
  "main": "index.js",
  "scripts": {
    "dev": "cross-env NODE_ENV=development & npm run clean & webpack-dev-server --config ./webpack/webpack.dev.js & npm run build:server -- -w & NODE_ENV=development nodemon -w 'src/server' src/server/index.js",
    "start": "cross-env NODE_ENV=production forever start ./src/server/index.js",
    "start:client": "cross-env NODE_ENV=development webpack-dev-server --config ./webpack/webpack.dev.js -w",
    "build:client": "rm -rf static && webpack --config ./webpack/webpack.prod.js",
    "build:server": "tsc -p src/server",
    "stop:all": "forever stopall",
    "deploy": "bash ./deploy.sh",
    "clean": "rimraf 'src/server/**/*.{js,map}'",
    "test": ""
  },
  "keywords": [
    "react",
    "typescript"
  ],
  "_moduleAliases": {
    "@src": "src",
    "@root": ".",
    "@client": "src/client",
    "@server": "src/server"
  },
  "author": "lyan",
  "license": "MIT",
  "dependencies": {
    "axios": "^0.18.0",
    "config": "^3.0.1",
    "cross-env": "^5.2.0",
