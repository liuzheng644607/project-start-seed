    "koa-favicon": "^2.0.1",
    "koa-router": "^7.4.0",
    "koa-static": "^5.0.0",
    "mobx": "^5.9.0",
    "mobx-react": "^5.4.3",
    "module-alias": "^2.2.0",
    "path-to-regexp": "^3.0.0",
    "react": "^16.6.1",
    "react-css-modules": "^4.7.9",
    "react-dom": "^16.6.1",
    "react-router": "^5.0.0",
    "react-router-dom": "^5.0.0",
    "socket.io": "^2.2.0",
    "socket.io-client": "^2.2.0",
    "typescript": "^3.3.3333"
  },
  "devDependencies": {
    "@types/config": "^0.0.34",
    "@types/http-proxy": "^1.16.2",
    "@types/koa": "^2.0.48",
    "@types/koa-bodyparser": "^4.2.2",
